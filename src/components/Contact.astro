---
const btnContact = [
  {
    name: "Linkedin",
    img: "/icons/linkedin.png",
    link: "https://www.linkedin.com/in/mariano-luis-villa/?locale=en_US",
  },
  {
    name: "Instagram",
    img: "/icons/instagram2.png",
    link: "https://www.instagram.com/dager.32/",
  },
  {
    name: "Github",
    img: "/icons/github.png",
    link: "https://github.com/MarianoVilla?tab=repositories",
  },
  {
    name: "Youtube",
    img: "/icons/youtube.png",
    link: "https://www.youtube.com/@DotDager",
  },
  {
    name: "Tiktok",
    img: "/icons/tiktok.png",
    link: "https://www.tiktok.com/@elantrodedager",
  },
  {
    name: "Gmail",
    img: "/icons/gmail.png",
    link: "mailto:mariano.villa@gmail.com",
  },
];
---

<div class="bg-contact">
  <section
    id="contact"
    class="max-w-[95%] text-center md:text-left md:max-w-[1050px] mx-auto"
  >
    <h2 class="text-black text-4xl md:text-5xl font-black py-10">Contacto.</h2>
    <div
      class="flex flex-col gap-16 md:gap:0 md:flex-row md:justify-between md:py-20"
    >
      <aside class="flex items-center gap-5">
        <div class="bg-purple w-52 h-5w-52 rounded-full p-4">
          <img class="grayscale" src="/images/user-logo.webp " alt="profile" />
        </div>
        <div class="max-w-[20ch]">
          <p class="text-3xl font-bold">Mariano Luis Villa</p>
          <p class="text-purple font-semibold text-base">
            Desarrollador Full-stack senior
          </p>
        </div>
      </aside>

      <div class="grid grid-cols-2 gap-3">
        {
          btnContact.map((btn) => (
            <div>
              <a
                class="bg-black px-6 py-3 rounded-full text-white flex  items-center gap-4 hover:scale-105 transition"
                href={btn.link}
                target="_blank"
              >
                <img class="h-7" src={btn.img} alt={btn.name} />
                <p>{btn.name}</p>
              </a>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</div>

<style>
  .bg-contact {
    background: url("/images/rejilla2.png") no-repeat left center;
    background-size: 80vh;
    background-position: 30px;
  }
</style>
